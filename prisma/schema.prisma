// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Guest {
  id          Int       @id @default(autoincrement())
  code        String    @unique // Nanti ini di-generate otomatis
  name        String
  category    String?   // VIP, Keluarga, Teman (Label aja)
  inviteType  String    // "Matrimony Only" atau "Reception & Matrimony"
  createdAt   DateTime  @default(now())
  
  eventId     Int       
  event       Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)

  messages    Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())
  guestId   Int
  guest     Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
}

model Event {
  id            Int      @id @default(autoincrement())
  name          String
  location      String
  
  // DUA WAKTU TERPISAH
  matrimonyDate DateTime // Waktu Akad
  receptionDate DateTime // Waktu Resepsi
  
  createdAt     DateTime @default(now())
  guests        Guest[]
}