generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Guest {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  name        String
  category    String?
  inviteType  String
  pax         Int       @default(1) // <--- TAMBAHKAN INI (Jumlah Pax)
  createdAt   DateTime  @default(now())
  
  eventId     Int       
  event       Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)

  messages    Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())
  guestId   Int
  guest     Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
}

model Event {
  id            Int      @id @default(autoincrement())
  name          String
  slug          String   @unique
  location      String
  matrimonyDate DateTime
  receptionDate DateTime
  
  images        EventImage[] // Relasi ke tabel gambar

  createdAt     DateTime @default(now())
  guests        Guest[]
}

// Model baru untuk simpan URL gambar
model EventImage {
  id        Int      @id @default(autoincrement())
  url       String   
  createdAt DateTime @default(now())
  
  eventId   Int
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
}